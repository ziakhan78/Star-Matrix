@model IEnumerable<StarMatrix.Models.ShipLocation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Ship Locations</h2>
                <div style="float:right;">   <a class="btn btn-success btn-sm" href="@Url.Action("Create", "ShipLocations")"><i class="glyphicon glyphicon-plus-sign"></i> Add New</a></div>
            </div>
            <div class="box-content">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sr.</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tugs)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BollardPulls)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EngineHPs)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClassTypes)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PresentLocation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Availability)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AvailableLocation)
                            </th>

                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int rowno = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(rowno += 1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tugs.TugName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BollardPulls.BollardPullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EngineHPs.EngineHPName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClassTypes.ClassTypeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PresentLocation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Availability)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AvailableLocation)
                                </td>

                                <td>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "ShipLocations", new { id = item.Id})"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                                    <a class="btn btn-danger btn-sm" onclick="return confirm('Are sure you want to delete this item?');" href="@Url.Action("DeleteConfirmed", "ShipLocations", new { id = item.Id })"><i class="glyphicon glyphicon-trash"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>